		required: 'Please fill Annonce type',
		trim: true
	},
       ville: {
		type: String,
		default: '',
		required: 'Please fill Annonce name',
		trim: true
	},
        r√©gion: {
		type: String,
		default: '',
		required: 'Please fill Annonce type',
		trim: true
	},
	created: {
		type: Date,
		default: Date.now
	},
	user: {
		type: Schema.ObjectId,
		ref: 'User'
	}
});

mongoose.model('Annonce', AnnonceSchema);
